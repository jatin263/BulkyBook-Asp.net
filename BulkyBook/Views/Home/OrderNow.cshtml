@model BulkyBook.Models.OrderPageModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    if (Model.Carts== null)
    {
        using (Html.BeginForm("SetOrder", "Home", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>Book Name</td>
                    <td>@Model.Books[0].Title</td>
                </tr>
                <tr>
                    <td>Quantity</td>
                    <td><input type="number" min="1" max="4" value="1" name="qunatityOfBook" oninput="calc(this.value)" /></td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td><p id="TotalPrice">@Model.Books[0].Price</p></td>
                </tr>
                <tr>
                    <td>Enter Address</td>
                    <td><input type="text" name="UserAddress" placeholder="Address" /><br />Leave Blank to use your default address</td>
                </tr>
                <tr>
                    <td>Enter City</td>
                    <td><input type="text" name="UserCity" placeholder="City" /><br />Leave Blank to use your default address</td>
                </tr>
                <tr>
                    <td>Enter State</td>
                    <td><input type="text" name="UserState" placeholder="State" /><br />Leave Blank to use your default address</td>
                </tr>
                <tr>
                    <td>Enter PostalCode</td>
                    <td><input type="number" name="UserPostalCode" placeholder="PostalCode" /><br />Leave Blank to use your default address</td>
                </tr>
            </table>
            <input type="submit" value="PlaceOrder" />
        }

    }
    <script>
        function calc(f) {
            document.getElementById("TotalPrice").innerHTML = parseInt(f) * parseInt(@Model.Books[0].Price);
        }
    </script>
}
 