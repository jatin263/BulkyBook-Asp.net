@model BulkyBook.Models.RecentOrderPage
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Recent Orders";
}
@{
    if (Model.Orders.Count == 0)
    {
        <h2>No Orders</h2>
    }
    else
    {
        <div>
        @for(int i = 0; i < Model.Orders.Count; i++)
        {
            <h1>@Model.Orders[i].Book.Title</h1>
            <h2>@Model.Orders[i].Book.Price</h2>
                <h3>@Model.Orders[i].Quantity</h3>
                int c = Model.Orders[i].Quantity * Model.Orders[i].Book.Price;
                <h4>@c</h4>
                <hr />
        }
        </div>
    }
}
